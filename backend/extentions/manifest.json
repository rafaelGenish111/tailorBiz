{
    "manifest_version": 3,
    "name": "BizFlow Hunter",
    "version": "1.0",
    "description": "שאיבת לידים מלינקדאין ל-CRM",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": [
      "http://localhost:5000/*" 
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }